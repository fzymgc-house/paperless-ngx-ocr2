{
  "title": "Mistral AI OCR API Response Contract",
  "description": "Contract for successful OCR response from Mistral AI API",
  "type": "object",
  "required": ["id", "object", "created", "model", "choices"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the OCR request"
    },
    "object": {
      "type": "string",
      "enum": ["chat.completion"],
      "description": "Object type"
    },
    "created": {
      "type": "integer",
      "description": "Unix timestamp when the response was created"
    },
    "model": {
      "type": "string",
      "description": "Model used for OCR processing"
    },
    "choices": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["index", "message", "finish_reason"],
        "properties": {
          "index": {
            "type": "integer",
            "description": "Index of the choice"
          },
          "message": {
            "type": "object",
            "required": ["role", "content"],
            "properties": {
              "role": {
                "type": "string",
                "enum": ["assistant"],
                "description": "Role of the message"
              },
              "content": {
                "type": "string",
                "description": "The OCR extracted text content"
              }
            }
          },
          "finish_reason": {
            "type": "string",
            "enum": ["stop", "length", "content_filter"],
            "description": "Reason why the response finished"
          }
        }
      }
    },
    "usage": {
      "type": "object",
      "properties": {
        "prompt_tokens": {
          "type": "integer",
          "description": "Number of tokens in the prompt"
        },
        "completion_tokens": {
          "type": "integer",
          "description": "Number of tokens in the completion"
        },
        "total_tokens": {
          "type": "integer",
          "description": "Total number of tokens used"
        }
      }
    }
  }
}
