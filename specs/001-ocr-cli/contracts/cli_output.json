{
  "title": "CLI Output Contract",
  "description": "Contract for CLI output format (--json flag)",
  "type": "object",
  "required": ["success", "data"],
  "properties": {
    "success": {
      "type": "boolean",
      "description": "Whether the operation was successful"
    },
    "data": {
      "type": "object",
      "description": "Result data (only present when success is true)",
      "properties": {
        "extracted_text": {
          "type": "string",
          "description": "The OCR extracted text"
        },
        "file_name": {
          "type": "string",
          "description": "Original file name"
        },
        "file_size": {
          "type": "integer",
          "description": "File size in bytes"
        },
        "processing_time_ms": {
          "type": "integer",
          "description": "Processing time in milliseconds"
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0,
          "description": "OCR confidence score (optional)"
        }
      }
    },
    "error": {
      "type": "object",
      "description": "Error information (only present when success is false)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["validation", "network", "api", "file_io", "internal"],
          "description": "Error type"
        },
        "message": {
          "type": "string",
          "description": "Human-readable error message"
        },
        "details": {
          "type": "string",
          "description": "Additional error details (optional)"
        }
      }
    }
  }
}
